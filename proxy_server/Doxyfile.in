# Project information
PROJECT_NAME           = "C++ Proxy Server"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF         = "A C++ proxy server with web interface and logging capabilities"
OUTPUT_DIRECTORY      = @CMAKE_CURRENT_BINARY_DIR@/doc
CREATE_SUBDIRS        = YES
OUTPUT_LANGUAGE       = English
BRIEF_MEMBER_DESC     = YES
REPEAT_BRIEF          = YES

# Input settings
INPUT                  = @CMAKE_SOURCE_DIR@/proxy_server/src @CMAKE_SOURCE_DIR@/proxy_server/include @CMAKE_SOURCE_DIR@/README.md
FILE_PATTERNS         = *.cpp *.hpp *.h *.md
RECURSIVE             = YES
EXTRACT_ALL           = YES
EXTRACT_PRIVATE       = YES
EXTRACT_STATIC        = YES
EXTRACT_LOCAL_CLASSES = YES

# Main page settings
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md

# Source code settings
SOURCE_BROWSER        = YES
INLINE_SOURCES        = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION   = YES
REFERENCES_LINK_SOURCE = YES
SOURCE_TOOLTIPS       = YES

# HTML output settings
GENERATE_HTML         = YES
HTML_OUTPUT          = html
HTML_FILE_EXTENSION  = .html
HTML_TIMESTAMP       = YES
HTML_DYNAMIC_MENUS   = YES

# Dot settings
CLASS_DIAGRAMS        = YES
HIDE_UNDOC_RELATIONS  = YES
CLASS_GRAPH           = YES
COLLABORATION_GRAPH   = YES
UML_LOOK             = YES
UML_LIMIT_NUM_FIELDS = 50
TEMPLATE_RELATIONS   = YES
INCLUDE_GRAPH        = YES
INCLUDED_BY_GRAPH    = YES
CALL_GRAPH           = YES
CALLER_GRAPH         = YES
GRAPHICAL_HIERARCHY  = YES
DIRECTORY_GRAPH      = YES
DOT_IMAGE_FORMAT     = png
DOT_GRAPH_MAX_NODES  = 100
MAX_DOT_GRAPH_DEPTH  = 0
DOT_CLEANUP          = YES 